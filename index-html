<script>
let unlocked=new Set();
const params=new URLSearchParams(window.location.search);
if(params.get('paid')==='true'){
unlocked.add(parseInt(params.get('plan')));
}

function go(price){
if(!unlocked.has(price)&&!unlocked.has(0)){
window.location.href='payment.html?plan='+price;
}else{
alert('æ¤œæŸ»é–‹å§‹ï¼ï¼ˆãƒ‡ãƒ¢ãªã®ã§å®Ÿéš›ã®æ¤œæŸ»ç”»é¢ã¯çœç•¥ï¼‰');
}
}

function unlock(){
const c=document.getElementById('code').value;
if(c==='0.01'){
unlocked.add(0);
