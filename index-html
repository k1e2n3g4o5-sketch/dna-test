<script>
let unlockedDrills=new Set();

const ans100={};

const ans980={};

const ans2980={};

const ans29800={};

function createStars(){
const s=document.getElementById('stars');

for(let i=0;i<200;i++){
const star=document.createElement('div');

star.className='star';

star.style.left=Math.random()*100+'%';

star.style.top=Math.random()*100+'%';

star.style.animationDelay=Math.random()*3+'s';

s.appendChild(star);

}
}

document.addEventListener('DOMContentLoaded',()=>{
createStars();

const params=new URLSearchParams(window.location.search);

if(params.get('paid')==='true'){
unlockedDrills.add(parseInt(params.get('plan')));

}
});

function selectDrill(price){
if(!unlockedDrills.has(price)&&!unlockedDrills.has(0)){
window.location.href='/payment.html?plan='+price;

return;

}
document.querySelectorAll('section').forEach(s=>s.classList.remove('active'));

document.getElementById('drill-'+price).classList.add('active');

if(price===100)init100();

if(price===980)init980();

if(price===2980)init2980();

if(price===29800)init29800();

window.scrollTo({top:0,behavior:'smooth'});

}

function backToEntrance(){
document.querySelectorAll('section').forEach(s=>s.classList.remove('active'));

document.getElementById('entrance').classList.add('active');

window.scrollTo({top:0,behavior:'smooth'});

return false;

}

function unlockAll(){
const code=document.getElementById('secretCode').value;

if(code==='0.01'){
unlockedDrills.add(0);

alert('ğŸ‰ å…¨DNAæ¤œæŸ»è§£æ”¾ï¼\n\nÂ¥100ã€Â¥980ã€Â¥2,980ã€Â¥29,800\nå…¨ã¦ã®æ¤œæŸ»ãŒä½¿ãˆã¾ã™ï¼');

}
}

function copyCode(id){
const text=document.getElementById(id).textContent;

navigator.clipboard.writeText(text).then(()=>{
alert('ğŸ“‹ ã‚³ãƒ”ãƒ¼ã—ã¾ã—ãŸï¼\n\nAIã«è²¼ã‚Šä»˜ã‘ã¦ã€ã•ã‚‰ã«æ·±ã„åˆ†æã‚’å—ã‘ã¦ãã ã•ã„ã€‚');

});

}

function init100(){
const qs=[
{q:'å›°é›£ãªçŠ¶æ³ã§ã©ã†åå¿œã—ã¾ã™ã‹ï¼Ÿ',opts:['è¨ˆç”»ã‚’ç«‹ã¦ã‚‹','é©å¿œã™ã‚‹','æµã‚Œã«ä»»ã›ã‚‹']},

{q:'ã‚¨ãƒãƒ«ã‚®ãƒ¼ã®ä½¿ã„æ–¹ã¯ï¼Ÿ',opts:['å¸¸ã«å…¨åŠ›','å¿…è¦ãªæ™‚ã ã‘','æœ€å°é™']},

{q:'å¤‰åŒ–ã¸ã®æ…‹åº¦ã¯ï¼Ÿ',opts:['æ…é‡','æŸ”è»Ÿ','æ­“è¿']}
];

const c=document.getElementById('questions-100');

c.innerHTML='';

qs.forEach((q,i)=>{
const d=document.createElement('div');

d.className='question';

d.innerHTML='<div class="question-title">Q'+(i+1)+'. '+q.q+'</div><div class="options">'+q.opts.map((o,j)=>'<div class="option" onclick="select100('+i+','+j+',this)">'+o+'</div>').join('')+'</div>';

c.appendChild(d);

});

}

function select100(qi,val,el){
el.parentElement.querySelectorAll('.option').forEach(o=>o.classList.remove('selected'));

el.classList.add('selected');

ans100[qi]=val;

if(Object.keys(ans100).length===3){
document.getElementById('btn-100').style.display='block';

}
}

function showResult100(){
const score=Object.values(ans100).reduce((a,b)=>a+b,0);

const mammal=Math.floor(100-(score/6*100));

const amphibian=100-mammal;

const code='DNA-BASIC-'+Math.floor(Math.random()*9000+1000);

let type='';

if(mammal>70){type='ğŸ¦ å“ºä¹³é¡å‹ï¼ˆå›ºå®šãƒ»ç¶­æŒï¼‰';}
else if(amphibian>70){type='ğŸ¸ ä¸¡ç”Ÿé¡å‹ï¼ˆé©å¿œãƒ»è§£æ”¾ï¼‰';}
else{type='âš–ï¸ ãƒã‚¤ãƒ–ãƒªãƒƒãƒ‰å‹ï¼ˆä¸¡æ–¹ä½¿ãˆã‚‹ï¼‰';}
document.getElementById('analysis-100').innerHTML='<div class="dna-box"><div class="dna-title">ğŸ§¬ åŸºæœ¬éºä¼å­å‹</div><div class="gene-row"><div class="gene-label">ğŸ¦ å“ºä¹³é¡å‹</div><div class="gene-value">'+mammal+'%</div></div><div class="gene-row"><div class="gene-label">ğŸ¸ ä¸¡ç”Ÿé¡å‹</div><div class="gene-value">'+amphibian+'%</div></div><div class="gene-row"><div class="gene-label">åˆ¤å®š</div><div class="gene-value">'+type+'</div></div></div>';

document.getElementById('code-100').textContent='åŸºæœ¬DNAæ¤œæŸ»çµæœ\n\néºä¼å­ã‚³ãƒ¼ãƒ‰: '+code+'\n\nğŸ¦ å“ºä¹³é¡å‹: '+mammal+'%\nğŸ¸ ä¸¡ç”Ÿé¡å‹: '+amphibian+'%\n\nåˆ¤å®š: '+type+'\n\nã“ã®ã‚³ãƒ¼ãƒ‰ã‚’AIã«è²¼ã‚Šä»˜ã‘ã‚‹ã¨ã€\nã•ã‚‰ã«æ·±ã„åˆ†æãŒå¾—ã‚‰ã‚Œã¾ã™ã€‚\n\nBeyond Time DNAæ¤œæŸ»ã‚­ãƒƒãƒˆ';

document.getElementById('questions-100').style.display='none';

document.getElementById('btn-100').style.display='none';

document.getElementById('result-100').style.display='block';

}

