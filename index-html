function select980(qi,val,el){
el.parentElement.querySelectorAll('.option').forEach(o=>o.classList.remove('selected'));

el.classList.add('selected');

ans980[qi]=val;

const bd=document.getElementById('birthday-980').value;

if(Object.keys(ans980).length===10&&bd){
document.getElementById('btn-980').style.display='block';

}
}

function showResult980(){
const birthday=document.getElementById('birthday-980').value;

if(!birthday){alert('âš ï¸ ç”Ÿå¹´æœˆæ—¥ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');return;}
const date=new Date(birthday);

const score=Object.values(ans980).reduce((a,b)=>a+b,0);

const mammal=Math.floor(100-(score/20*100));

const amphibian=100-mammal;

const x=(date.getFullYear()%360);

const y=(date.getMonth()*30+date.getDate())%180;

const z=((date.getFullYear()+date.getMonth()+date.getDate()+score)%100);

const code='DNA-COORD-'+x+'-'+y+'-'+z;

document.getElementById('analysis-980').innerHTML='<div class="dna-box"><div class="dna-title">ğŸ§¬ éºä¼å­å‹ + æ™‚ç©ºåº§æ¨™</div><div class="gene-row"><div class="gene-label">ğŸ¦ å“ºä¹³é¡å‹</div><div class="gene-value">'+mammal+'%</div></div><div class="gene-row"><div class="gene-label">ğŸ¸ ä¸¡ç”Ÿé¡å‹</div><div class="gene-value">'+amphibian+'%</div></div><div class="gene-row"><div class="gene-label">æ™‚ç©ºåº§æ¨™</div><div class="gene-value">('+x+', '+y+', '+z+')</div></div></div><p style="margin-top:20px;line-height:1.8">éå»'+Math.floor((new Date()-date)/(1000*60*60*24))+'æ—¥é–“ã®é¸æŠãŒã€ã“ã®éºä¼å­å‹ã¨åº§æ¨™ã‚’ä½œã‚Šå‡ºã—ã¾ã—ãŸã€‚</p>';

document.getElementById('code-980').textContent='åº§æ¨™DNAæ¤œæŸ»çµæœ\n\néºä¼å­ã‚³ãƒ¼ãƒ‰: '+code+'\n\nğŸ¦ å“ºä¹³é¡å‹: '+mammal+'%\nğŸ¸ ä¸¡ç”Ÿé¡å‹: '+amphibian+'%\næ™‚ç©ºåº§æ¨™: ('+x+', '+y+', '+z+')\n\nBeyond Time DNAæ¤œæŸ»ã‚­ãƒƒãƒˆ';

